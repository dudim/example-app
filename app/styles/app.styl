@import 'converter'

body
	font-family Arial, sans-serif
	font-size 14px
	color white
	margin 0
	padding 0
	position relative

.app-wrapper
	padding 0 20px
	width 330px
	height 400px
	margin 0 auto
	background #6c98e0
	box-sizing border-box

	&-title
		text-align center
		position relative
		height 40px
		line-height 40px

	&-content
		position relative

.state-loading
	filter blur(3px)

.state-loading:after
	content ''
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-color rgba(#fff, .7)
	z-index 100