.converter
	&-screen
		display flex
		flex-direction column
		justify-content space-between

	&-item
		display flex
		height 180px
		flex-direction row
		justify-content space-between
		position relative

		&:last-child
			margin 0 -20px
			padding-left 20px
			padding-right 20px
			background #2e61bf

			& ^[0]-nav
				left 20px
				right 20px

	&-name
		font-size 20px
		line-height 20px
		padding-top 60px

	&-value
		font-size 20px
		line-height 20px
		position relative
		padding-top 60px

		&-field
			font-family Arial, sans-serif
			background transparent
			outline none
			color white
			line-height 20px
			font-size 20px
			text-align right
			border none
			letter-spacing 0
			caret-color white

		&-buffer
			position absolute
			left -5000px
			letter-spacing 1px

	&-nav
		margin 0
		padding 0
		list-style none
		position absolute
		bottom 20px
		left 0
		right 0
		text-align center

		&-item
			border 1px solid white
			width 30px
			padding 3px 0
			text-align center
			font-size 10px
			display inline-block
			cursor pointer
			margin 0 5px 5px 0
			border-radius 3px

			&-active
				background white
				color #2e61bf
				cursor default